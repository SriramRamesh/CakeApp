<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.android.cakeapp.GetDetails"
    android:background="#ffffffff"
    android:id="@+id/getDetailsLayout">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/putName"
        android:layout_marginTop="63dp"
        android:textColor="#ff000000"
        android:layout_below="@+id/OrderTitle"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/putPhone"
        android:selectAllOnFocus="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Details"
            android:id="@+id/OrderTitle"
            android:textColor="#ff000000"
            android:layout_alignParentTop="true"
            android:layout_alignEnd="@+id/orderButton" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/putPhone"
            android:layout_below="@+id/putName"
            android:layout_alignParentStart="true"
            android:layout_marginTop="44dp"
            android:layout_alignParentEnd="true"
            android:textColor="#ff000000"
            android:text="Phone No"
            android:selectAllOnFocus="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/putRoomNo"
            android:layout_below="@+id/putPhone"
            android:layout_alignParentStart="true"
            android:layout_marginTop="40dp"
            android:layout_alignEnd="@+id/putPhone"
            android:text="Room No"
            android:textColor="#ff000000"
            android:selectAllOnFocus="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/putHostel"
            android:layout_below="@+id/putRoomNo"
            android:layout_alignParentStart="true"
            android:layout_marginTop="48dp"
            android:text="Hostel Name"
            android:layout_alignEnd="@+id/putRoomNo"
            android:textColor="#ff000000"
            android:selectAllOnFocus="true" />

    <Button
            style="?android:attr/buttonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order"
            android:id="@+id/orderButton"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
        android:background="#ff231cff"
        android:textColor="#ffffffff"
        android:onClick="Order" />




</RelativeLayout>
