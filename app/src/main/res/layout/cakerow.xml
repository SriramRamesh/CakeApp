<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout"
    android:background="#70e0ff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="1."
        android:id="@+id/rowS.No"
        android:textColor="#010101" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Chocalate Rambo "
        android:id="@+id/rowCakeName"
        android:layout_marginLeft="20sp"
        android:layout_weight="5"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/rowCakeWeight"
        android:textColor="#010000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="1.5kg"
        android:id="@+id/rowCakeWeight"
        android:layout_gravity="right"
        android:layout_marginLeft="40sp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/rowCakePrice"
        android:textColor="#010101" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Rs.2500"
        android:id="@+id/rowCakePrice"
        android:layout_gravity="right"
        android:gravity="right"
        android:layout_marginLeft="50sp"
        android:layout_weight="1.5"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:textColor="#010101" />
</RelativeLayout>